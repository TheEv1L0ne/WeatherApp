<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="70sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_current_temperature"
        android:background="@color/colorPrimary" />


    <ImageView
        android:id="@+id/img_weather_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_current_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/line1"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerInParent="true"
        android:layout_above="@id/pressure"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/humidity"
        android:background="@color/colorPrimary" />

</RelativeLayout>